# 서버
ENV=development
HOST=0.0.0.0
PORT=8000

# CORS
ALLOWED_ORIGINS=http://localhost:5173

# 파일 제한
MAX_FILE_SIZE_MB=20
MAX_FILES=20
MAX_TOTAL_SIZE_MB=100

# 경로
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# 파일 보관 시간
FILE_RETENTION_HOURS=24

# AWS S3 (이미지 업로드용)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=ap-northeast-2

# marker
MARKER_USE_GPU=false

# Pandoc
PANDOC_PDF_ENGINE=xelatex
